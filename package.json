{
    "name": "programkasir",
    "version": "1.0.0",
    "description": "Aplikasi Kasir Berbasis Web",
    "main": "src/main/electron/main.js",
    "browserslist": [
        "last 4 Chrome versions"
    ],
    "scripts": {
        "postinstall": "mocha test/channel_test.js && electron-builder install-app-deps",
        "dev": "concurrently -k -s first \"npm:watch:*\"",
        "watch:rollup": "rollup -c -w",
        "watch:electron": "electron . --dev",
        "start": "electron .",
        "prepackage": "rimraf ./build",
        "package": "rollup -c && electron-builder build --publish never",
        "test": "mocha --ignore test/channel_test.js"
    },
    "author": "David Barnabas",
    "license": "ISC",
    "devDependencies": {
        "@rollup/plugin-babel": "^5.2.3",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-node-resolve": "^11.1.1",
        "@rollup/plugin-url": "^6.0.0",
        "autoprefixer": "^10.2.4",
        "concurrently": "^5.3.0",
        "electron": "11.3.0",
        "electron-builder": "^22.9.1",
        "electron-rebuild": "^2.3.5",
        "electron-reload": "^1.5.0",
        "eslint": "^7.21.0",
        "mocha": "^8.3.0",
        "node-sass": "^5.0.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.38.5",
        "rollup-plugin-postcss": "^4.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "spectron": "^13.0.0"
    },
    "build": {
        "productName": "Program Kasir",
        "appId": "com.cipuy-cloud.Program_Kasir",
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "category": "Office",
            "target": [
                "AppImage"
            ]
        },
        "files": [
            "node_modules/**/*",
            "package.json",
            "src/main/electron/",
            "src/resources/",
            "build/"
        ]
    },
    "dependencies": {
        "better-sqlite3": "^7.1.2"
    }
}
