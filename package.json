{
    "name": "programkasir",
    "version": "1.0.0",
    "description": "Aplikasi Kasir Berbasis Web",
    "main": "src/main/electron/main.js",
    "browserslist": [
        "last 4 Chrome versions"
    ],
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "dev": "concurrently -k -s first \"npm:watch:*\"",
        "watch:rollup": "rollup -c -w",
        "watch:electron": "electron . --dev",
        "start": "electron .",
        "package": "npm run clean && rollup -c && electron-builder build --publish never",
        "clean": "rimraf ./build"
    },
    "author": "David Barnabas",
    "license": "ISC",
    "devDependencies": {
        "@rollup/plugin-babel": "^5.2.3",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-node-resolve": "^11.1.1",
        "@rollup/plugin-url": "^6.0.0",
        "autoprefixer": "^10.2.4",
        "concurrently": "^5.3.0",
        "electron": "11.2.3",
        "electron-builder": "^22.9.1",
        "electron-reload": "^1.5.0",
        "node-sass": "^5.0.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.38.5",
        "rollup-plugin-postcss": "^4.0.0",
        "rollup-plugin-terser": "^7.0.2"
    },
    "dependencies": {
        "sqlite": "^4.0.19",
        "sqlite3": "^5.0.1"
    },
    "build": {
        "productName": "Program Kasir",
        "appId": "com.cipuy-cloud.Program_Kasir",
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "category": "Office",
            "target": [
                "AppImage"
            ]
        },
        "files": [
            "src/main/electron/",
            "src/resources/",
            "build/"
        ]
    }
}
